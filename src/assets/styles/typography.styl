$typographies = {
  "Nexa-Light": {
    font-family: s("'Nexa', sans-serif"),
    font-weight: 300
  },
  "Nexa-Bold": {
    font-family: s("'Nexa', sans-serif"),
    font-weight: 700
  },
  "Aristotelica": {
    font-family: s("'Aristotelica Display', sans-serif"),
    font-weight: 200
  }
}

typography($typography)
  $styles = $typographies[$typography]
  if $styles == null
    error("Can't find typography into typographies stratucture.")
  {$styles}
